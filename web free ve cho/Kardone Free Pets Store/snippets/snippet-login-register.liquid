<div class="template_customer template_customer__login">
	<div class="container">
		<h1 class="page_heading">{{ page_title }}</h1>
		
		{% comment %} NAVIGATION {% endcomment %}
		<div id="account_section__wrapper" class="customer_wrapper ">
			<a href="#" id="account_register__link" class="customer_block customer_block__register">
				<svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M20 16C15.6 16 12 12.4 12 8C12 3.6 15.6 0 20 0C24.4 0 28 3.6 28 8C28 12.4 24.4 16 20 16ZM20 2C16.7 2 14 4.7 14 8C14 11.3 16.7 14 20 14C23.3 14 26 11.3 26 8C26 4.7 23.3 2 20 2Z"/>
					<path d="M40 40H0V39C0.299252 34.1 2.39401 29.3 5.88529 25.8C9.67581 22.1 14.6633 20 19.9501 20C25.2369 20 30.3242 22.1 34.015 25.9C37.5062 29.4 39.8005 34 40 39V40ZM2.09476 38H37.8055C37.3067 33.9 35.5112 30.2 32.6185 27.3C29.3267 23.9 24.7382 22 19.9501 22C15.1621 22 10.6733 23.9 7.2818 27.3C4.38903 30.2 2.59352 33.9 2.09476 38Z"/>
				</svg>
				<h5>Registration </h5>
			</a>

			<a href="#" class="customer_block customer_block__login">
				<svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M20 16C15.6 16 12 12.4 12 8C12 3.6 15.6 0 20 0C24.4 0 28 3.6 28 8C28 12.4 24.4 16 20 16ZM20 2C16.7 2 14 4.7 14 8C14 11.3 16.7 14 20 14C23.3 14 26 11.3 26 8C26 4.7 23.3 2 20 2Z"/>
					<path d="M40 40H0V39C0.299252 34.1 2.39401 29.3 5.88529 25.8C9.67581 22.1 14.6633 20 19.9501 20C25.2369 20 30.3242 22.1 34.015 25.9C37.5062 29.4 39.8005 34 40 39V40ZM2.09476 38H37.8055C37.3067 33.9 35.5112 30.2 32.6185 27.3C29.3267 23.9 24.7382 22 19.9501 22C15.1621 22 10.6733 23.9 7.2818 27.3C4.38903 30.2 2.59352 33.9 2.09476 38Z"/>
				</svg>
				<h5>Log in</h5>
			</a>

			{% if shop.checkout.guest_login %}
				<a href="#" class="customer_block customer_block__login_guest">
					<svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M20 16C15.6 16 12 12.4 12 8C12 3.6 15.6 0 20 0C24.4 0 28 3.6 28 8C28 12.4 24.4 16 20 16ZM20 2C16.7 2 14 4.7 14 8C14 11.3 16.7 14 20 14C23.3 14 26 11.3 26 8C26 4.7 23.3 2 20 2Z"/>
						<path d="M40 40H0V39C0.299252 34.1 2.39401 29.3 5.88529 25.8C9.67581 22.1 14.6633 20 19.9501 20C25.2369 20 30.3242 22.1 34.015 25.9C37.5062 29.4 39.8005 34 40 39V40ZM2.09476 38H37.8055C37.3067 33.9 35.5112 30.2 32.6185 27.3C29.3267 23.9 24.7382 22 19.9501 22C15.1621 22 10.6733 23.9 7.2818 27.3C4.38903 30.2 2.59352 33.9 2.09476 38Z"/>
					</svg>
					<h5>Continue as Guest</h5>
				</a>
			{% endif %}


			<a href="#" id="account_reset__link" class="customer_block customer_block__restore">
				<svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M20 16C15.6 16 12 12.4 12 8C12 3.6 15.6 0 20 0C24.4 0 28 3.6 28 8C28 12.4 24.4 16 20 16ZM20 2C16.7 2 14 4.7 14 8C14 11.3 16.7 14 20 14C23.3 14 26 11.3 26 8C26 4.7 23.3 2 20 2Z"/>
					<path d="M40 40H0V39C0.299252 34.1 2.39401 29.3 5.88529 25.8C9.67581 22.1 14.6633 20 19.9501 20C25.2369 20 30.3242 22.1 34.015 25.9C37.5062 29.4 39.8005 34 40 39V40ZM2.09476 38H37.8055C37.3067 33.9 35.5112 30.2 32.6185 27.3C29.3267 23.9 24.7382 22 19.9501 22C15.1621 22 10.6733 23.9 7.2818 27.3C4.38903 30.2 2.59352 33.9 2.09476 38Z"/>
				</svg>
				<h5>Restore Password</h5>
			</a>
		</div>

		{% comment %} REGISTER {% endcomment %}
		<div id="account_section__register" class="account_section account_section__register">
			<h4>{{ 'customer.register_form.title' | t }} <a class="link_close account_register__close" href="#">{{ 'customer.register_form.close' | t }}</a></h4>

			<div class="form-horizontal">
				{% form 'create_customer' %}
					<input type="hidden" id="password_confirmed" name="customer[password]">

					{{ form.errors | default_errors | replace: 'errors', 'alert alert-danger' }}

					<div class="clearfix form-group">
						<label for="first_name" class="col-sm-4">{{ 'customer.register_form.first_name' | t }}</label>
						<div class="col-sm-4">
							<input type="text" value="" name="customer[first_name]" id="first_name">
						</div>
					</div>

					<div class="clearfix form-group">
						<label for="last_name" class="col-sm-4">{{ 'customer.register_form.last_name' | t }}</label>
						<div class="col-sm-4">
							<input type="text" value="" name="customer[last_name]" id="last_name">
						</div>
					</div>

					<div class="clearfix form-group">
						<label for="email" class="col-sm-4">{{ 'customer.register_form.email' | t }}</label>
						<div class="col-sm-4">
							<input type="email" value="" name="customer[email]" id="email">
						</div>
					</div>

					<div class="clearfix form-group">
						<label for="password_1" class="col-sm-4">{{ 'customer.register_form.password' | t }}</label>
						<div class="col-sm-4">
							<input type="password" value="" name="customer[password]" id="password_1">
						</div>
					</div>

					<div class="clearfix form-group">
						<label for="password_2" class="col-sm-4">{{ 'customer.register_form.confirm_password' | t }}</label>
						<div class="col-sm-4">
							<input type="password" value="" id="password_2">
						</div>
					</div>

					<div class="form-group">
						<div class="col-sm-offset-4 col-sm-4">
							<button class="btn btn-primary" type="submit">{{ 'customer.register_form.button' | t }}</button>
							<a class="account_register__close" href="#">{{ 'customer.register_form.cancel' | t }}</a>
						</div>
					</div>
				{% endform %}
			</div>
		</div>
		
		{% comment %} LOGIN {% endcomment %}
		<div id="account_section__login"  class="account_section account_section__login">
			{% form 'customer_login' %}
				<h4>{{ 'customer.login_form.title' | t }}</h4>

				{{ form.errors | default_errors | replace: 'errors', 'alert alert-danger' }}

				<div class="form-group">
					<label for="customer_email">{{ 'customer.login_form.email' | t }}</label>
					<input type="email" value="" name="customer[email]" id="customer_email">
				</div>
				
				{% if form.password_needed %}
					<div class="form-group">
						<label for="customer_password">{{ 'customer.login_form.password' | t }}</label>
						<input type="password" value="" name="customer[password]" id="customer_password">
					</div>
				{% endif %}
				  
				<div class="form-group">
					<button class="btn" type="submit">{{ 'customer.login_form.button' | t }}</button>
					{% comment %}<a id="account_reset__link" href="#">{{ 'customer.login_form.forgot_password' | t }}</a>{% endcomment %}
				</div>
			{% endform %}
		</div>


		{% comment %} RESET {% endcomment %}
		<div id="account_section__reset" class="account_section account_section__reset">
			<h4>{{ 'customer.reset_password.title' | t }} <a class="link_close account_reset__cancel" href="#">{{ 'customer.reset_password.close' | t }}</a></h4>

			<p class="note">{{ 'customer.reset_password.subtitle' | t }}</p>

			{% form 'recover_customer_password' %}
				<div class="clearfix form-horizontal">
					{% if form.posted_successfully? %}
						<p class="alert alert-success">{{ 'customer.reset_password.success' | t }}</p>
					{% else %}
						{{ form.errors | default_errors | replace: 'errors', 'alert alert-danger' }}
					{% endif %}

					<div class="form-group">
						<label for="email_recover" class="large col-sm-4">{{ 'customer.reset_password.email' | t }}</label>
						<div class="col-sm-4">
							<input type="email" id="email_recover" name="email" value="">
						</div>
					</div>

					<div class="form-group">
						<div class="col-sm-4 col-sm-offset-4">
							<button type="submit" class="btn">{{ 'customer.reset_password.button' | t }}</button>
							<a class="account_reset__cancel" href="#">{{ 'customer.reset_password.cancel' | t }}</a>
						</div>
					</div>
				</div>
			{% endform %}
		</div>

	</div>
</div>




