		{% if search.results_count == 0 %}
			{% if search.terms %}
				<p class="alert alert-warning">{{ 'pages.search.no_results' | t }}</p>
			{% endif %}
		{% else %}
			{% assign search_results = search.results | sort: 'object_type' %}
